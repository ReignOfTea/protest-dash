# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_application_client_id
DISCORD_CLIENT_SECRET=your_discord_application_client_secret
DISCORD_CALLBACK_URL=http://localhost:3001/auth/discord/callback

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=generate-a-secure-random-string-for-production

# Server Configuration
PORT=3001
NODE_ENV=development

# HTTPS Configuration (only set to 'true' if actually using HTTPS)
# For localhost development, leave this unset or set to 'false'
# For production with HTTPS, set to 'true'
USE_HTTPS=false

# Frontend URL (only needed for development - Vite dev server on port 5173)
# In production, URLs are automatically derived from the request
# You can leave this unset in production when serving frontend from the same server
FRONTEND_URL=http://localhost:5173

# Development only: Bypass Discord OAuth authentication (set to 'true' to enable)
# ⚠️  WARNING: This should NEVER be set to 'true' in production!
# Set this to 'true' when developing to avoid Discord OAuth rate limits
DEV_BYPASS_AUTH=false

