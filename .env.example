# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_application_client_id
DISCORD_CLIENT_SECRET=your_discord_application_client_secret
DISCORD_CALLBACK_URL=http://localhost:3001/auth/discord/callback

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=generate-a-secure-random-string-for-production

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (only needed for development - Vite dev server on port 5173)
# In production, URLs are automatically derived from the request
# You can leave this unset in production when serving frontend from the same server
FRONTEND_URL=http://localhost:5173

